<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolBar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:title="@string/app_name"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_title"
                android:gravity="center"
                android:text="@string/my_nano_degree_title"
                android:textSize="@dimen/title_textview"
                android:textStyle="bold"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/buttonSpotifyStreamer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/spotify_streamer"
                    android:textSize="@dimen/textsize_buttons"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/buttonScoresApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/scores_app"
                    android:textSize="@dimen/textsize_buttons"
                    />
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/buttonLibraryApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/library_app"
                    android:textSize="@dimen/textsize_buttons"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/buttonBuildItBigger"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/build_it_bigger"
                    android:textSize="@dimen/textsize_buttons"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorPrimary">

                <Button
                    android:id="@+id/buttonXyzReader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/xyz_reader"
                    android:textSize="@dimen/textsize_buttons"/>
            </FrameLayout>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_buttons"
                android:background="@color/colorAccent">

                <Button
                    android:id="@+id/buttonMyApp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="?attr/selectableItemBackground"
                    android:text="@string/my_app"
                    android:textSize="@dimen/textsize_buttons"/>
            </FrameLayout>

        </LinearLayout>

    </ScrollView>


</LinearLayout>
